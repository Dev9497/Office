<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="client"
            type="com.example.office.model.Client"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_dark"
        android:id="@+id/rl_client">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="242dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="@{client.id}" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="246dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/ic_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="54dp"
            android:text="@{client.name}" />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="131dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/ic_username"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="85dp"
            android:text="@{client.username}" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="216dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="85dp"
            android:layout_toRightOf="@id/tv_username"
            android:drawableLeft="@drawable/ic_email"
            android:text="@{client.email}" />

        <TextView
            android:id="@+id/tv_street"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="117dp"
            android:drawableLeft="@drawable/ic_address"
            android:text="@{client.address.street}" />
        <TextView
            android:id="@+id/tv_suite"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_street"
            android:layout_marginTop="117dp"
            android:layout_marginLeft="4dp"
            android:text="@{client.address.suite}" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_suite"
            android:layout_marginTop="117dp"
            android:layout_marginLeft="4dp"
            android:text="@{client.address.city}" />

        <TextView
            android:id="@+id/tv_zipcode"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="117dp"
            android:layout_toRightOf="@id/tv_city"
            android:text="@{client.address.zipcode}" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="268dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="147dp"
            android:drawableLeft="@drawable/ic_phone"
            android:text="@{client.phone}" />
        <TextView
            android:id="@+id/tv_website"
            android:layout_width="141dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/ic_website"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="178dp"
            android:text="@{client.website}" />

        <TextView
            android:id="@+id/tv_cmp_name"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="207dp"
            android:drawableLeft="@drawable/ic_company"
            android:text="@{client.company.name}" />
        <TextView
            android:id="@+id/tv_bs"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_toRightOf="@id/tv_cmp_name"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/tv_website"
            android:text="@{client.company.bs}" />

        <TextView
            android:id="@+id/tv_catch_phrase"
            android:layout_width="216dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="-208dp"
            android:layout_marginTop="244dp"
            android:layout_toLeftOf="@id/tv_bs"
            android:text="@{client.company.catchPhrase}" />
    </RelativeLayout>

</layout>
